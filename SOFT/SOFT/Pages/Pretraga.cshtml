        .search {
            flex-direction: column;
            gap: 30px;
        }
        .one {
            width: 100% !important;
        }
    }
        .card {
        border: none;
    }
    .card-text {
        color:grey;
    }
    .kartica {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .oglas {
        display: flex;
        flex-direction: column;
    }
    .oglas-wrapper {
        display: flex;
        flex-wrap: wrap;
        width: 90%;
        gap: 10px;
        margin: 0 auto;
        margin-top: 35px;
    }
    .input-class {
        border-radius: 13px;
        padding: 10px;
        width: 90%;
        border: 1px solid #4b423b;

    }
    .select-sort {
        display: flex;
        margin: 0 auto;
        margin-top: 33px;
        flex-direction: column;
        align-items: center;
    }
    .pretrazi-selekt {
        border-radius: 25px;
        padding: 10px;
        width: 100%;
        border: 1px solid #4b423b;
    }
    .pretrazi {
        width: 45%;
    }
    .justify
    {
        text-align: justify;
        text-justify: inter-word;
    }
    .one {
        width: 24%;
        display: flex;
    }
    input, select
    {
        margin-right: 20px;
        border-radius: 5px;
