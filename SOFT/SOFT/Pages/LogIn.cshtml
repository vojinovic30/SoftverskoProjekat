@page
@model startApp.Pages.LogInModel
@{
}


<html>
    <head>
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

    </head>
    <body>

<div class="container">
    <div class="inner">
        <h1>Prijava</h1>
        <img src="~/Pictures/logo.png"/>
        <form method="post" class="formLogIn">
            <div class="input-wrapper">
                <input type="text" placeholder='Username' class="input" asp-for="LoginModel.Username" />
                <input type="password" placeholder="Password" class="input" asp-for="LoginModel.Password" />
            </div>
                <div class="dugmiciLogIn">
                    <button type="submit" class="button" asp-page-handler="LogIn">Prijavi se</button>
                    <button type="submit" class="button" asp-page-handler="ZaboravioSamSifru">Zaboravio sam sifru</button>
                    
                </div>
                <div>
                    <label class="labelPorukaLogIn">@Model.Poruka</label>
                    <button type="submit" class="button @Model.KlasaRegistracijaDugme" asp-page="/SignUp">Registrujte se</button>
                </div>

                <div class="zaPrikazivanjePitanja @Model.KlasaSigPitanje">
                    <label class="labelSigPitanje">Sigurnosno pitanje: @Model.pitanje</label>
                    <div class="sigPitanjeIOdgovor">
                        <input type="text" placeholder='Odgovor'asp-for="odgovor" class="input"/>
                        <button type="submit" class="button btn2" asp-page-handler="ProveriOdgovor">Prijavi se preko odgovora</button>
                    </div>
                </div>
        </form>
        
    </div>    
</div>

<style>
        @@media only screen and (max-width: 600px) {
            .inner {
                width: 100% !important;
            }
        }
.input-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 25px;
}
/*container design*/
.container{
    width: 100%;
    height: 100%;
}

        .formLogIn {
            width: 50%;
        }
.container .inner{ 
    width: 480px;
    height: 100%;
    margin: 20px auto;
    padding: 10px;
    transition-duration: 0.7s;
    flex-direction: column;
    display: flex;
    align-items: center;
}
.inner h1{
    color :#1b1b1b;
    font-family: calibri, arial;
    font-weight: bold;
    text-align: center;
    font-size: 40px;
}
.inner h3{
    color: #1b1b1b;
    font-size: 18px;
    font-family: calibri;
    text-align: center;
    margin-top: -5px;
}
.inner .input{
    width : 100%;
    border: #4b423b 1px solid;
    background: transparent;
    padding: 10px;
    margin: 5px;
    border-radius: 10px;
    }
.inner .input:focus{
    box-shadow: none;
                border: 1px solid #4b423b;
    }

    .button:hover {
        transform: scale(1.05);
            background: #4b423b;
        }
    .button {
        padding: 10px 8px;
        color: white;
            background: #4b423b;
            margin-top: 10px;
        border: none;
            transition: 0.3s;
            border-radius: 25px;
            padding: 9px 22px;
        }
    .btn2 {
        margin-top: 0px;
    }
.dugmiciLogIn{
    display: flex;
    flex-direction: column;
    justify-content: center;
    }
.nePrikazuj{
    display: none;
    }
    img {
        width: 6%;
    }
.sigPitanjeIOdgovor{
    display: flex;
    flex-direction: row;
    }
    .zaPrikazivanjePitanja {
        margin-bottom: 50px;
    }
</style>
    </body>
</html>